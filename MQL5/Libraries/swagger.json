          },
          "symbol" : {
            "type" : "string",
            "example" : "EURUSD"
          },
          "time" : {
            "type" : "string",
            "example" : "12.06.2019 10:00:00"
          },
          "open" : {
            "type" : "number",
            "example" : 1.65656
          },
          "volume" : {
            "type" : "number",
            "example" : 0.1
          }
        }
      }
    },    
    "ArrayOfPositions" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "example" : 1
          },
          "type" : {
            "type" : "string",
            "enum": ["POSITION_TYPE_BUY", "POSITION_TYPE_SELL"]
          },
          "magic" : {
            "type" : "integer",
            "example" : 0
